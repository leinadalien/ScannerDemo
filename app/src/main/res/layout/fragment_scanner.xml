<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScannerFragment">

    <ImageView
        android:id="@+id/cropped_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>


    <Button
        android:id="@+id/scan_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:text="Scan"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cropped_image_view"
        app:layout_constraintStart_toStartOf="@+id/cropped_image_view"
        app:layout_constraintTop_toBottomOf="@+id/cropped_image_view" />
    <Button
        android:visibility="gone"
        android:id="@+id/flip_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:text="Flip"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cropped_image_view"
        app:layout_constraintStart_toStartOf="@+id/cropped_image_view"
        app:layout_constraintTop_toBottomOf="@+id/scan_button" />

</androidx.constraintlayout.widget.ConstraintLayout>